/**
 * 1-bit memory register.
 * If load[t-1]=1 then out[t] = in[t-1]
 * else out does not change (out[t] = out[t-1])
 */

CHIP Bit {
    IN  in, load;
    OUT out;

    PARTS:
    DFF(in=load, out=loadp);
    DFF(in=in, out=inp);
    DFF(in=out2, out=outp);
    Mux(a=outp, b=inp, sel=loadp, out=out, out=out2);
}
